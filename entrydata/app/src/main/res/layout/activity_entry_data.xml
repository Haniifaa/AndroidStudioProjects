<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".entry_data">

    <TextView
        android:id="@+id/textview"
        android:text="Entry Data "
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textAlignment="center"
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tkode"
            android:text="nip"
            android:layout_width="100dp"
            android:layout_centerVertical="true"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/xkode"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tkode"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tnm_brg"
            android:text="Nama Guru"
            android:layout_width="100dp"
            android:layout_centerVertical="true"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/xnama"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tnm_brg"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tstatus"
            android:text="Status"
            android:layout_width="100dp"
            android:layout_centerVertical="true"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/xsatuan"
            android:layout_width="250dp"
            android:layout_toRightOf="@+id/tstatus"
            android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/talamat"
            android:text="Alamat"
            android:layout_centerVertical="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Title"/>
        <EditText
            android:id="@+id/xharga"
            android:layout_toRightOf="@+id/talamat"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tkota"
            android:text="Kota"
            android:layout_width="100dp"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_toRightOf="@+id/tkota"
            android:id="@+id/xkota"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/save"
            android:text="Save"
            android:backgroundTint="@color/blue1"
            android:layout_width="wrap_content"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/batal"
            android:text="Batal"
            android:layout_margin="20dp"
            android:backgroundTint="@color/blue1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>