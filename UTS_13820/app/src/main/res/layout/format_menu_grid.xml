<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:padding="5dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:backgroundTint="@color/blue2"
        app:cardCornerRadius="20dp"
        android:layout_width="160dp"
        android:layout_height="wrap_content">
        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/foto_alat"
                android:src="@drawable/kursiroda"
                android:layout_width="150dp"
                android:layout_height="150dp"/>

            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/nm_alat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/foto_alat"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="nama alat"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="25dp" />
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/kode_alat"
                android:textSize="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:layout_below="@+id/nm_alat"
                android:text="kode alat"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/harga_alat"
                android:layout_below="@+id/kode_alat"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:text="harga alat"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/satuan_alat"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:layout_below="@+id/harga_alat"
                android:text="satuan alat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/jml_pesan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/satuan_alat"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="-9dp"
                android:hint="jumlah pesan"
                android:textColorHint="@color/grey"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/total_pesan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/jml_pesan"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="-9dp"
                android:hint="total pesan"
                android:textColorHint="@color/grey"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="25dp" />

            <Button
                android:id="@+id/kirim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/total_pesan"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/yellow"
                android:onClick="kirimkan"
                android:text="simpan"
                android:textColor="@color/white" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>